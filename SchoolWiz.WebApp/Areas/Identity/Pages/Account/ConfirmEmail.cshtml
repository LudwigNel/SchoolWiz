@page
@model ConfirmEmailModel

@{
    ViewData["Title"] = "Confirm Email";
    ViewData["PageName"] = "confirm_email";
    ViewData["Heading"] = "<i class='subheader-icon fal fa-check-circle'></i> Confirm Email";
    ViewData["Category1"] = "Authentication";
    ViewData["PageDescription"] = Model;
}

<div class="alert alert-primary alert-dismissible w-100">
    <div class="d-flex flex-start w-100">
        <div class="mr-2 hidden-md-down">
            <span class="icon-stack icon-stack-lg">
                <i class="base base-6 icon-stack-3x opacity-100 color-primary-500"></i>
                <i class="base base-10 icon-stack-2x opacity-100 color-primary-300 fa-flip-vertical"></i>
                <i class="@(Settings.Theme.IconPrefix) fa-info icon-stack-1x opacity-100 color-white"></i>
            </span>
        </div>
        <div class="d-flex flex-fill">
            <div class="flex-fill">
                <span class="h5">@Model.StatusMessage</span>
                <br />
                <br />
                <div class="row">
                    <div class="col-md-2">
                        <a class="btn btn-block btn-primary mt-3 btn-link text-white ml-auto border-0" asp-area="Identity" asp-page="/account/login">
                            <i class="fal fa-shield-check fs-lg mr-1"></i> Login
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>