@model SchoolWiz.Common.Models.Invoice.InvoiceDetailViewModel

@{ Layout = null; }

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

<div class="offset-xl-2 col-xl-8 col-lg-12 col-md-12 col-sm-12 padding">
    <div class="card">
        <div class="card-header p-4">
            <span class="pt-2 d-inline-block">@Model.SchoolDetails.Name</span>
            <div class="float-right">
                <h3 class="mb-0">Invoice @Model.InvoiceNumber</h3>
                Invoice Date: @Model.InvoiceDate
            </div>

            <div class="card-body">
                <div class="row mb-4 w-100">
                    <div class="col-sm-6">
                        <h5 class="mb-3">From</h5>
                        <h3 class="text-dark mb-1">@Model.SchoolDetails.ContactPerson</h3>
                        <div>Phone no.: @Model.SchoolDetails.ContactNumber</div>
                        <div> Email: @Model.SchoolDetails.ContactEmail</div>
                    </div>

                    <div class="col-sm-6">
                        <h5 class="mb-3">Ro</h5>
                        <h3 class="text-dark mb-1">@Model.AccountDetails.Guardian.Name</h3>
                        <div>Home Phone no.: @Model.AccountDetails.Guardian.HomePhoneNumber</div>
                        <div>Mobile no.: @Model.AccountDetails.Guardian.MobileNumber</div>
                        <div>Email: @Model.AccountDetails.Guardian.Email</div>
                    </div>
                </div>

                <div class="table-responsive-sm">
                    <table class="table table-warning table-sm">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Excl. VAT</th>
                                <th>VAT</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.InvoiceItems)
                            {
                                <tr>
                                    <td>@item.Description</td>
                                    <td class="right">@item.ItemCharge</td>
                                    <td class="right">@item.VatAmount</td>
                                    <td class="right">@item.ItemTotal</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="row">
                    <div class="col-lg-4 col-sm-5 ml-auto">
                        <table class="table table-info table-sm">
                            <tbody>
                                <tr>
                                    <td class="left"><strong>Subtotal</strong></td>
                                    <td class="right">@Model.TotalExcludingVat</td>
                                </tr>
                                <tr>
                                    <td class="left"><strong>VAT</strong></td>
                                    <td class="right">@Model.TotalVat</td>
                                </tr>
                                <tr>
                                    <td class="left"><strong>Total</strong></td>
                                    <td class="right">@Model.TotalIncludingVat</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .padding {
        padding: 2rem !important;
    }
</style>