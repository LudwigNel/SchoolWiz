@model SchoolWiz.WebApp.Models.User.UserEditViewModel

@{
    ViewData["Title"] = "Edit";
    ViewData["PageName"] = "iser_edit";
    ViewData["Category1"] = "Security";
    ViewData["Heading"] = "<i class='subheader-icon fal fa-cogs'></i> User Details</sup>";
    ViewData["PageDescription"] = "User accounts for the application.";
}

@{ ViewBag.Title = "Edit User";}

@section HeadBlock {
    <link rel="stylesheet" media="screen, print" href="~/css/notifications/toastr/toastr.css">
    <script src="~/js/toast.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
}

<div class="alert alert-primary">
    <div class="d-flex flex-start w-100">
        <div class="mr-2 hidden-md-down">
            <span class="icon-stack icon-stack-lg">
                <i class="base base-2 icon-stack-3x opacity-100 color-primary-500"></i>
                <i class="base base-2 icon-stack-2x opacity-100 color-primary-300"></i>
                <i class="@(Settings.Theme.IconPrefix) fa-info icon-stack-1x opacity-100 color-white"></i>
            </span>
        </div>
        <div class="d-flex flex-fill">
            <div class="flex-fill">
                <span class="h5">About</span>
                <p>
                    Users are the accounts people use to sign into the application.
                    <br />
                    It gives them the ability to access the application.
                </p>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-12">
        <div class="panel">
            <div class="panel-hdr">
                <h2>Edit the selected User</h2>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <form method="post" enctype="multipart/form-data" asp-controller="User" asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div><div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="form-text" asp-for="UserName"></label>
                                <input class="form-control" asp-for="UserName"/>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label class="form-text" asp-for="IdentityNumber"></label>
                                <input class="form-control" asp-for="IdentityNumber" />
                                <span asp-validation-for="IdentityNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="form-text" asp-for="FirstName"></label>
                                <input class="form-control" asp-for="FirstName" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label class="form-text font-weight-normal" asp-for="MiddleName"></label>
                                <input class="form-control" asp-for="MiddleName" />
                                <span asp-validation-for="MiddleName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="form-text" asp-for="LastName"></label>
                                <input class="form-control" asp-for="LastName" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label class="form-text" asp-for="MobileNumber"></label>
                                <input class="form-control" asp-for="MobileNumber" />
                                <span asp-validation-for="MobileNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="form-text" asp-for="Email"></label>
                                <input class="form-control" asp-for="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label class="form-text" asp-for="Roles"></label>
                                <input class="form-control" asp-for="Roles" readonly />
                                <a class="btn btn-primary" asp-controller="Role" asp-action="Assign" asp-route-id="@Model.Id" asp-route-returnUrl="@Url.Action("Edit", "User")">
                                    <i class="@Settings.Theme.IconPrefix fa-user-tag"></i> Manage Roles
                                </a>
                            </div>
                        </div>
                        <br/><br/>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="CreatedBy" class="form-text"></label>
                                <input class="form-control" asp-for="CreatedBy" readonly />
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="CreatedDate" class="form-text"></label>
                                <input class="form-control" asp-for="CreatedDate" readonly />
                            </div>
                        </div>
                        @if (Model.ModifiedById != null)
                        {
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="ModifiedBy" class="form-text"></label>
                                    <input class="form-control" asp-for="ModifiedBy" readonly />
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="ModifiedDate" class="form-text"></label>
                                    <input class="form-control" asp-for="ModifiedDate" readonly />
                                </div>
                            </div>
                        }
                        <div class="form-row">
                            <div class="custom-control custom-checkbox" style="margin-left: 0.7em;">
                                <input type="checkbox" class="custom-control-input" asp-for="InActive">
                                <label class="custom-control-label" asp-for="InActive"></label>
                            </div>
                        </div>
                        <br /><br />
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary float-left"><i class="@(Settings.Theme.IconPrefix) fa-save"></i> Save</button>
                            <a class="btn btn-success float-right" asp-controller="User" asp-action="Index"><i class="@(Settings.Theme.IconPrefix) fa-caret-square-left" style="margin-right: 0.7em"> Back</i></a>
                        </div><br /><br />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section ScriptsBlock {
    <script src="~/js/notifications/toastr/toastr.js"></script>
    <script>
            $(document).ready(function () {
                var displayToast = '@TempData["DisplayToast"]';
                if (displayToast === 'True' || displayToast === 'true') {
                    var toastType = '@TempData["ToastType"]';
                    var toastTitle = '@TempData["ToastTitle"]';
                    var toastMessage = '@TempData["ToastMessage"]';

                    toastJs.showToastMessage(toastType, toastTitle, toastMessage);
                }
            });
    </script>
}
