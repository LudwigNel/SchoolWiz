@model SchoolWiz.Web.Models.User.UserEditViewModel

@{ ViewBag.Title = "Edit User";}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="User" asp-action="Index">User Role List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Edit User</li>
                </ol>
            </nav><br /><br />
                        <form method="post" enctype="multipart/form-data" asp-controller="User" asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <label class="form-text" asp-for="UserName"></label>
                                </div>
                                <div class="form-group col-md-3">
                                    <input class="form-control" asp-for="UserName" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="col-md-2"></div>
                                <div class="form-group col-md-2">
                                    <label class="form-text" asp-for="IdentityNumber"></label>
                                </div>
                                <div class="form-group col-md-3">
                                    <input class="form-control" asp-for="IdentityNumber" />
                                    <span asp-validation-for="IdentityNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <label class="form-text" asp-for="FirstName"></label>
                                </div>
                                <div class="form-group col-md-3">
                                    <input class="form-control" asp-for="FirstName" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-2"></div>
                                <div class="form-group col-md-2">
                                    <label class="form-text font-weight-normal" asp-for="MiddleName"></label>
                                </div>
                                <div class="form-group col-md-3">
                                    <input class="form-control" asp-for="MiddleName" />
                                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <label class="form-text" asp-for="LastName"></label>
                                </div>
                                <div class="form-group col-md-3">
                                    <input class="form-control" asp-for="LastName" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="col-md-2"></div>
                                <div class="form-group col-md-2">
                                    <label class="form-text" asp-for="MobileNumber"></label>
                                </div>
                                <div class="form-group col-md-3">
                                    <input class="form-control" asp-for="MobileNumber" />
                                    <span asp-validation-for="MobileNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <label class="form-text" asp-for="Email"></label>
                                </div>
                                <div class="form-group col-md-10">
                                    <input class="form-control" asp-for="Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <label class="form-text" asp-for="Roles"></label>
                                </div>
                                <div class="form-group col-md-8">
                                    <input class="form-control" asp-for="Roles" readonly />
                                </div>
                                <div class="form-group col-md-2">
                                    <a asp-controller="Role" asp-action="Assign" asp-route-id="@Model.Id">
                                        <i class="fas fa-user-tag"></i> Manage Roles
                                    </a>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <label asp-for="CreatedBy" class="form-text"></label>
                                </div>
                                <div class="form-group col-md-3">
                                    <input class="form-control" asp-for="CreatedBy" readonly />
                                </div>
                                <div class="col-md-2"></div>
                                <div class="form-group col-md-2">
                                    <label asp-for="CreatedDate" class="form-text"></label>
                                </div>
                                <div class="form-group col-md-3">
                                    <input class="form-control" asp-for="CreatedDate" readonly />
                                </div>
                            </div>
                            @if (Model.ModifiedById != null)
                            {
                                <div class="form-row">
                                    <div class="form-group col-md-2">
                                        <label asp-for="ModifiedBy" class="form-text"></label>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <input class="form-control" asp-for="ModifiedBy" readonly />
                                    </div>
                                    <div class="col-md-2"></div>
                                    <div class="form-group col-md-2">
                                        <label asp-for="ModifiedDate" class="form-text"></label>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <input class="form-control" asp-for="ModifiedDate" readonly />
                                    </div>
                                </div>
                            }
                            <div class="form-row">
                                <div class="col-md-2"></div>
                                <div class="custom-control custom-checkbox" style="margin-left: 0.7em;">
                                    <input type="checkbox" class="custom-control-input" asp-for="InActive">
                                    <label class="custom-control-label" asp-for="InActive"></label>
                                </div>
                            </div>
                            <br /><br />
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary float-left"><i class="fas fa-save"></i> Save</button>
                                <a class="btn btn-success float-right" asp-controller="User" asp-action="Index"><i class="fas fa-caret-square-left" style="margin-right: 0.7em"> Back</i></a>
                            </div><br /><br />
                        </form>
        </div>
    </div>
</div>