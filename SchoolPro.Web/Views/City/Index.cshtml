@model IEnumerable<SchoolWiz.Web.Models.City.CityIndexViewModel>

@{ ViewBag.Title = "Provinces";}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Province List</li>
                    </ol>
                </nav><br /><br />
                <div class="row">
                    <div class="col-md-12 table-responsive-md">
                        <a class="btn btn-sm btn-outline-success float-md-right" asp-controller="City" asp-action="Create"> New Province</a>
                        <table id="citiesTable" class="table table-striped">
                            <thead>
                                <tr class="d-flex">
                                    <th class="col-2">Name</th>
                                    <th class="col-2">Province</th>
                                    <th class="col-2">Country</th>
                                    <th class="col-2" style="text-align: center">Inactive</th>
                                    <th class="text-warning col-2">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var city in Model)
                                {
                                <tr class="d-flex">
                                    <td class="col-2" style="padding-right: 30px;">
                                        <a asp-controller="City" asp-action="Edit" asp-route-id="@city.Id">
                                            @city.Name
                                        </a>
                                    </td>
                                    <td class="col-2" style="padding-right: 30px;">
                                        @city.Province
                                    </td>
                                    <td class="col-2" style="padding-right: 30px;">
                                        @city.Country
                                    </td>
                                    <td class="col-2" style="text-align: center; padding-right: 30px;">
                                        @city.InActive
                                    </td>
                                    <td class="col-2">
                                        <a class="text-primary" asp-action="Edit" asp-route-id="@city.Id">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a class="text-danger" asp-action="Delete" asp-route-id="@city.Id">
                                            <i class="far fa-trash-alt"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>