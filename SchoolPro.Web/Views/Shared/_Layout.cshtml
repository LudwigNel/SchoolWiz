<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>@ViewData["Title"]</title>

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/css/bootstrap-select.min.css">

    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/js/adminlte.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- DataTables -->
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/dataTables.responsive.min.js"></script>
    <script src="~/js/responsive.bootstrap4.min.js"></script>
    <script src="~/js/pace.min.js"></script>

    <!-- Latest compiled and minified JavaScript -->
    <script src="~/js/bootstrap-select.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <partial name="_LoginPartial" />
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="#" class="brand-link">
                <img src="~/Images/SchoolLogo.jpg" alt="SchoolWiz Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">SchoolWiz</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-header">SETUP</li>
                            <li class="nav-item">
                                <a asp-controller="School" asp-action="Index" class="nav-link text-light">
                                    <i class="fas fa-school" style="margin-right: 0.7em;"></i>
                                    <p>
                                        School Maintenance
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item has-treeview">
                                <a href="#" class="nav-link active">
                                    <i class="fas fa-server"></i>
                                    <p>
                                        Master Data
                                        <i class="right fas fa-angle-right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item" style="margin-left: 0.5em;">
                                        <a asp-controller="AccountStatus" asp-action="Index" class="nav-link text-light">
                                            <i class="fas fa-battery-half" style="margin-right: 0.7em;"></i>
                                            <p>
                                                Account Status
                                            </p>
                                        </a>
                                    </li>
                                    <li class="nav-item" style="margin-left: 0.5em;">
                                        <a asp-controller="AccountType" asp-action="Index" class="nav-link text-light">
                                            <i class="fas fa-user-circle" style="margin-right: 0.7em;"></i>
                                            <p>
                                                Account Type
                                            </p>
                                        </a>
                                    </li>
                                    <li class="nav-item" style="margin-left: 0.5em;">
                                        <a asp-controller="AddressType" asp-action="Index" class="nav-link text-light">
                                            <i class="fas fa-address-card" style="margin-right: 0.7em;"></i>
                                            <p>
                                                Address Type
                                            </p>
                                        </a>
                                    </li>
                                    <li class="nav-item" style="margin-left: 0.5em;">
                                        <a asp-controller="City" asp-action="Index" class="nav-link text-light">
                                            <i class="fas fa-city" style="margin-right: 0.7em;"></i>
                                            <p>
                                                Cities
                                            </p>
                                        </a>
                                    </li>
                                    <li class="nav-item" style="margin-left: 0.5em;">
                                        <a asp-controller="Country" asp-action="Index" class="nav-link text-light">
                                            <i class="fas fa-globe" style="margin-right: 0.7em;"></i>
                                            <p>
                                                Countries
                                            </p>
                                        </a>
                                    </li>
                                    <li class="nav-item" style="margin-left: 0.5em;">
                                        <a asp-controller="Province" asp-action="Index" class="nav-link text-light">
                                            <i class="fas fa-flag" style="margin-right: 0.7em;"></i>
                                            <p>
                                                Provinces
                                            </p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item has-treeview">
                                <a href="#" class="nav-link active">
                                    <i class="fas fa-shield-alt"></i>
                                    <p>
                                        Security
                                        <i class="right fas fa-angle-right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item" style="margin-left: 0.5em;">
                                        <a asp-controller="Role" asp-action="Index" class="nav-link text-light">
                                            <i class="fas fa-user-tag" style="margin-right: 0.7em;"></i>
                                            <p>
                                                Roles
                                            </p>
                                        </a>
                                    </li>
                                    <li class="nav-item" style="margin-left: 0.5em;">
                                        <a asp-controller="User" asp-action="Index" class="nav-link text-light">
                                            <i class="fas fa-users" style="margin-right: 0.7em;"></i>
                                            <p>
                                                Users
                                            </p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>


        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                Anything you want
            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; 2014-2019 <a href="https://adminlte.io">AdminLTE.io</a>.</strong> All rights reserved.
        </footer>
    </div>
    <!-- ./wrapper -->

</body>