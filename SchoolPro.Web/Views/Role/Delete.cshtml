@model SchoolWiz.Web.Models.Role.RoleDeleteViewModel

@{ ViewBag.Title = "Delete User Role";}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Role" asp-action="Index">User Role List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Delete User Role</li>
                </ol>
            </nav><br /><br />
            <h2 style="color: red;">Are you sure want to delete this user role?</h2>
            <form method="post" enctype="multipart/form-data" asp-controller="Role" asp-action="Delete">
                <div class="form-group">
                    <input asp-for="Name" class="form-control font-weight-bolder" readonly />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary float-left"><i class="fas fa-trash-alt" style="margin-right: 0.7em"></i>Delete</button>
                    <a class="btn btn-success float-right" asp-controller="Role" asp-action="Index"><i class="fas fa-caret-square-left" style="margin-right: 0.7em"> No</i></a>
                </div><br /><br /><br />
            </form>
        </div>
    </div>
</div>
