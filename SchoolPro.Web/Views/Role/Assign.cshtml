@model SchoolWiz.Web.Models.Role.AssignRoleViewModel

@{ ViewBag.Title = "Assign User Role";}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Role" asp-action="Index">User Role List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Assign User Role</li>
                </ol>
            </nav><br /><br />
            <form asp-action="Assign">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UserId"/>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="UserName" class="form-text"></label>
                    </div>
                    <div class="form-group col-md-10">
                        <input class="form-control" disabled asp-for="UserName"/>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="UserName" class="form-text"></label>
                    </div>
                    <div class="form-group col-md-10">
                        <select class="selectpicker" multiple asp-for="SelectedRoles" asp-items="@Model.RoleList"></select>
                    </div>
                </div>
                <br/><br/>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary float-left"><i class="fas fa-save"></i> Save</button>
                    <a class="btn btn-success float-right" asp-controller="User" asp-action="Edit" asp-route-id="@Model.UserId"><i class="fas fa-caret-square-left" style="margin-right: 0.7em"> Back</i></a>
                </div><br /><br />
            </form>
        </div>
    </div>
</div>